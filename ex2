### ğŸ **main.py**
```python
import sys
from src.manager import add_note, list_notes, delete_note

def main():
    if len(sys.argv) < 2:
        print("Usage: python main.py [add/list/delete] [note_text or note_number]")
        return

    command = sys.argv[1]
    if command == "add":
        if len(sys.argv) < 3:
            print("Please provide note text.")
            return
        add_note(" ".join(sys.argv[2:]))
    elif command == "list":
        list_notes()
    elif command == "delete":
        if len(sys.argv) < 3 or not sys.argv[2].isdigit():
            print("Please specify the note number to delete.")
            return
        delete_note(int(sys.argv[2]))
    else:
        print("Unknown command. Use 'add', 'list', or 'delete'.")

if __name__ == "__main__":
    main()
